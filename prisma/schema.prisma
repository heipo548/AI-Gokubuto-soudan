// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Question {
  id                 Int       @id @default(autoincrement())
  title              String    @db.VarChar(200)
  content            String
  category           String?   @db.VarChar(50) // 'AI', '都市伝説', 'その他'
  status             String    @default("pending") @db.VarChar(20) // 'pending', 'answered'
  notification_token String?   @unique @db.VarChar(255) // Added @unique for faster lookups if tokens are unique
  created_at         DateTime  @default(now())
  updated_at         DateTime  @updatedAt
  answers            Answer[]
  likes              Like[]
  comments           Comment[]

  @@index([status])
  @@index([category])
  @@index([created_at])
  // notification_token is already unique, which implies an index
}

model Answer {
  id          Int      @id @default(autoincrement())
  question    Question @relation(fields: [question_id], references: [id])
  question_id Int
  content     String
  image_url   String?  @db.VarChar(500)
  link_url    String?  @db.VarChar(500)
  responder   String   @db.VarChar(20) // '俺' or 'たま'
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@index([question_id]) // Explicitly define for clarity, though Prisma does it for relations
  @@index([created_at])
}

model Like {
  id          Int      @id @default(autoincrement())
  question    Question @relation(fields: [question_id], references: [id])
  question_id Int
  ip_address  String?  @db.Inet // Prisma doesn't have Inet, use String and handle validation at app level or use native type if possible later
  created_at  DateTime @default(now())

  @@unique([question_id, ip_address])
}

model Comment {
  id             Int      @id @default(autoincrement())
  question       Question @relation(fields: [question_id], references: [id])
  question_id    Int
  content        String
  commenter_name String   @default("匿名") @db.VarChar(50)
  ip_address     String?  @db.Inet // Prisma doesn't have Inet, use String and handle validation at app level or use native type if possible later
  created_at     DateTime @default(now())

  @@index([question_id]) // Explicitly define
  @@index([created_at])
}
